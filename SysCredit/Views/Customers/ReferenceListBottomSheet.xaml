<?xml version="1.0" encoding="utf-8" ?>
<The49:BottomSheet
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:The49="https://schemas.the49.com/dotnet/2023/maui"
        xmlns:Maui="clr-namespace:Maui.DataGrid;assembly=Maui.DataGrid"
        xmlns:ViewModels="clr-namespace:SysCredit.ViewModels.Customers"
        x:Class="SysCredit.Views.Customers.ReferenceListBottomSheet"
        HasHandle="True" HasBackdrop="True"
        HandleColor="{StaticResource Primary}"
        Background="{StaticResource WhiteBrush}"
        Padding="16, 32">
    <The49:BottomSheet.Detents>
        <The49:FullscreenDetent />
        <The49:MediumDetent IsDefault="True" />
        <The49:RatioDetent Ratio="0.2" />
    </The49:BottomSheet.Detents>
    <The49:BottomSheet.Resources>
    </The49:BottomSheet.Resources>

</The49:BottomSheet>
