<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:Controls="clr-namespace:SysCredit.Controls"
        xmlns:Maui="clr-namespace:Maui.DataGrid;assembly=Maui.DataGrid"
        xmlns:ViewModels="clr-namespace:SysCredit.ViewModels.Customers"
        x:Class="SysCredit.Views.Customers.ReferenceListPage"
        x:Name="Self"
        Shell.ForegroundColor="{StaticResource White}"
        Shell.BackgroundColor="{StaticResource Primary}"
        Title="Lista de Referencias">

    <Shell.TitleView>
        <Controls:TitleView
            Text="{Binding Source={x:Reference Self}, Path=Title}" TextColor="White"
            FontSize="20" FontAttributes="None" FontFamily="InterLight"
            HorizontalOptions="StartAndExpand" Margin="0,0,0,0" />
    </Shell.TitleView>

    <FlexLayout Direction="Column" Wrap="Wrap" JustifyContent="Center" AlignItems="Center">
        <Label Text="Lista de Referencias" TextColor="Black"
               FlexLayout.AlignSelf="Center" />
    </FlexLayout>
</ContentPage>
