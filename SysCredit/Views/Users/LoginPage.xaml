<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:SysCredit.Mobile.ViewModels.Users"
             x:DataType="ViewModels:LoginViewModel"
             x:Class="SysCredit.Mobile.Views.Users.LoginPage"
             Title="Login">
    
    <VerticalStackLayout Spacing="10">
        <Label 
            Text="Esta es la página de Login"
            FontSize="25" 
            TextColor="Red" 
            VerticalOptions="Center"
            HorizontalOptions="Start"/>

        <Button 
            Text="Iniciar Sesión"
            Command="{Binding GoToHomeCommand}" />
        
        <Button 
            Text="Registrarse"
            Command="{Binding GoToUserRegisterCommand}" />

        <Button
            Text="Recuperar Cuenta"
            Command="{Binding GoToRecoverAccountCommand}" />

    </VerticalStackLayout>
</ContentPage>