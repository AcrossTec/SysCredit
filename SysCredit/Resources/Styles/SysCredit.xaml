<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="MainPageItemColor">#061F60</Color>
    <Color x:Key="SysCreditNavBarTextColor">#293263</Color>
    <Color x:Key="SysCreditFlyoutBackgroundColor">#061F60</Color>

    <SolidColorBrush x:Key="MainPageItemBrush" Color="{StaticResource MainPageItemColor}" />
    <SolidColorBrush x:Key="SysCreditNavBarTextBrush" Color="{StaticResource SysCreditNavBarTextColor}" />
    <SolidColorBrush x:Key="SysCreditFlyoutBackgroundBrush" Color="{StaticResource SysCreditFlyoutBackgroundColor}" />

    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource White}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" />
        <Setter Property="FontFamily" Value="InterRegular"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Black}}" />
        <Setter Property="FontFamily" Value="InterRegular" />
    </Style>

</ResourceDictionary>
