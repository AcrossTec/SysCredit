<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Border">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="Stroke" Value="Transparent" />
    </Style>

    <Style x:Key="BorderDarkerNeumorphismTop" TargetType="Border">
        <Setter Property="StrokeShape" Value="RoundRectangle 10" />
        <Setter Property="Shadow" Value="{StaticResource ShadowDarkerNeumorphismTop}" />
    </Style>

    <Style x:Key="BorderDarkerNeumorphismBottom" TargetType="Border">
        <Setter Property="StrokeShape" Value="RoundRectangle 10" />
        <Setter Property="Shadow" Value="{StaticResource ShadowDarkerNeumorphismBottom}" />
    </Style>

</ResourceDictionary>