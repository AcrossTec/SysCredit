<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SysCredit.Controls.MainPageItem"
             x:Name="this">
    <Frame BindingContext="{x:Reference this}"
           BorderColor="{Binding BorderColor}"
           HasShadow="{Binding HasShadow}"
           BackgroundColor="{Binding ItemBackColor}"
           CornerRadius="{Binding CornerRadius}">
        <FlexLayout Direction="Column" AlignItems="Center" JustifyContent="SpaceEvenly">
            <Image Source="{Binding ImageSource}" HeightRequest="55" WidthRequest="55" />
            <Label Text="{Binding Text}" TextColor="{Binding TextColor}" Margin="0,5,0,0" HorizontalTextAlignment="Center" />
        </FlexLayout>
    </Frame>
</ContentView>
