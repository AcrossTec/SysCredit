<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SysCredit.Controls.MainPageItem"
             x:Name="this">
    <Frame BindingContext="{x:Reference this}"
           BorderColor="{Binding BorderColor}"
           HasShadow="{Binding HasShadow}"
           Background="{Binding Background}"
           BackgroundColor="{Binding BackgroundColor}"
           CornerRadius="{Binding CornerRadius}">
        <FlexLayout Direction="Column" AlignItems="Center" JustifyContent="SpaceEvenly">
            <Image Source="{Binding ImageSource}" HeightRequest="54" WidthRequest="54" />
            <Label Text="{Binding Text}" TextColor="{Binding TextColor}" />
        </FlexLayout>
    </Frame>
</ContentView>
