<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="SysCredit.Controls.FlyoutHeader"
             HeightRequest="200">

    <Grid Padding="25"
          RowDefinitions="145, Auto">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="{StaticResource Secondary}" Offset="0.1" />
                <GradientStop Color="{StaticResource Primary}" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        <Image Aspect="AspectFit"
               Grid.Row="0"
               Source="dotnet_bot.svg">
            <Image.Behaviors>
                <Toolkit:IconTintColorBehavior TintColor="{StaticResource Tertiary}" />
            </Image.Behaviors>
        </Image>

        <Label Text="SysCredit" 
               TextColor="White"
               Grid.Row="1"
               FontSize="15"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center" />
    </Grid>
</ContentView>
