<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Local="clr-namespace:SysCredit"
             xmlns:UraniumUI="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
             xmlns:UIMaterial="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             x:Class="SysCredit.App"
             RequestedThemeChanged="OnRequestedThemeChanged"
             UserAppTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <x:String x:Key="AppName">SysCredit</x:String>
            <x:String x:Key="DevCompanyName">W&amp;A</x:String>
            <x:String x:Key="CompanyName">SysCredit</x:String>
            <x:String x:Key="Watchword">Efectivo Al Instante</x:String>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <UIMaterial:ColorResource />
                <ResourceDictionary x:Name="AppStyles" Source="Resources/Styles/Styles.xaml" />
                <UIMaterial:StyleResource BasedOn="{x:Reference AppStyles}" />
                <ResourceDictionary Source="Resources/Styles/SysCredit.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
